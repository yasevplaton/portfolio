.skill__row {
  &--edit {
    .skill__col--title {
      border-bottom: 1px solid #000;
    }

    .skill__col--percent {
      border-bottom: 1px solid #000;
    }

    .skill__edit-mode-btns {
      display: inline-block;
    }

    .skill__read-mode-btns {
      display: none;
    }

    .skill__input {
      pointer-events: auto;
    }
  }
}

.skill__col {
  padding-top: 15px;
  padding-bottom: 5px;

  &--title {
    width: 60%;
  }

  &--percent {
    width: 45px;
  }

  &--btns {
    display: flex;
    justify-content: flex-end;
  }
}

.skill__input {
  border: none;
  font-family: inherit;
  font-size: 16px;
  color: $text-color;

  &--table {
    width: 100%;
  }

  &--new-title-wrapper {
    position: relative;

    &.error {
      .skill__input-error {
        display: block;
      }
    }
  }

  &--new-title {
    width: 95%;
    border-bottom: 1px solid #000;
    padding-bottom: 0.7rem;
    margin-right: 10px;
    padding-left: 10px;
  }

  &--new-percent {
    width: 100%;
  }
}

.skill__input-error {
  display: none;
  position: absolute;
  top: 100%;
  z-index: 100;
}

.skill__percent-block {
  display: flex;
  align-items: center;

  &--new-skill {
    width: 45px;
    margin-right: 30px;
    border-bottom: 1px solid #000;
    padding-bottom: 9px;
  }
}

.skill__percent-prefix {
  font-family: inherit;
  font-size: 16px;
  color: rgba(65, 76, 99, 0.7);
}

.skill__edit-mode-btns {
  display: none;
}

.skill__read-mode-btns {
  display: inline-block;
}
