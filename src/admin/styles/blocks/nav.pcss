.nav__wrapper {
  grid-area: nav;
}

.nav__list {
  display: flex;
  align-items: center;
  color: $text-color;
}

.nav__item {
  padding: 30px;

  &--active {
    font-weight: 600;
    color: #383bcf;
    border-bottom: 3px solid #383bcf;
  }

  &:not(&--active):hover {
    font-weight: 600;
    color: #383bcf;
    border-bottom: 3px solid #383bcf;
  }
}