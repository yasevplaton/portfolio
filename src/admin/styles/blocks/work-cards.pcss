.work-cards__list {
  display: grid;
  grid-template:
    "card card card" max-content / 1fr 1fr 1fr;
  grid-gap: 30px;

  @include tablets {
    grid-template:
    "card card" max-content / 1fr 1fr;
    grid-gap: 20px;
  }

  @include big-phones {
    grid-template: "card" max-content / 1fr;
    grid-gap: 10px;
  }
}

.work-cards__item {
  box-shadow: 4.1px 2.9px 20px 0 rgba(0, 0, 0, 0.07);
  background-color: #ffffff;
}