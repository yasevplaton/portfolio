.stack-row__list {
  display: flex;

  @include big-phones {
    flex-wrap: wrap;
  }
}

.stack-row__title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 2%;

  @include mini-desktop {
    text-align: center;
  }
}

.stack-row__item {
  flex: 1 0 25%;
  display: flex;
  align-items: center;
  justify-content: center;

  &:last-child {
    margin-right: 0;
  }

  @include phones {
    flex: 1 0 50%;
  }
}