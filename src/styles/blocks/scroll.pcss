.scroll {
  display: inline-flex;
  align-self: center;
  align-items: center;
  height: 10%;

  &:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
  }
}

.scroll__text {
  margin-right: 2px;
}