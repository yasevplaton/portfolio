.scroll {
  display: inline-flex;
  align-items: center;

  &:after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
    transition: transform .3s;
  }

  &:hover {
    &:after {
      transform: translateY(-20%);
    }
  }
}

.scroll__text {
  margin-right: 2px;
}