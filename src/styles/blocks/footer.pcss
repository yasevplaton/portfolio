.footer {
  background-color: #1f232d;
  color: #fff;
}

.footer__container {
  padding: 100px 0;
  display: flex;
  justify-content: space-between;
  padding-right: 100px;

  @include desktop {
    padding-right: 0;
  }

  @include mini-phones {
    flex-direction: column;
  }
}

.footer__copyright {
  margin-right: 5%;
  width: 30%;

  @include desktop {
    margin-right: 10px;
  }

  @include mini-phones {
    width: 100%;
    margin-bottom: 15%;
  }
}

.footer__content {
  flex: 1;
}

.footer__nav {
  margin-bottom: 3%;
  
  @include desktop {
    margin-bottom: 7%;
  }

  @include tablets {
    margin-bottom: 2%;
  }

  @include mini-phones {
    margin-bottom: 8%;
  }
}

.footer__content-data {
  display: flex;
  justify-content: space-between;
  color: rgba(255, 255, 255, 0.3);
  line-height: 1.88;

  @include tablets {
    flex-direction: column;
  }
}

.footer__about-me {
  width: 40%;

  @include tablets {
    width: 100%;
  }

  @include mini-phones {
    width: 95%;
  }
}

.footer__text {
  margin-bottom: 5%;

  @include tablets {
    margin-bottom: 2%;
  }

  @include mini-phones {
    margin-bottom: 5%;
  }
}

.footer__socials {

  @include tablets {
    margin-bottom: 10%;
  }

}

.footer__quote {

  @include tablets {
    width: 100%;
  }

}