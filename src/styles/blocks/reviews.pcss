.reviews {
  width: 72%;
  padding: 15% 0;

  @include tablets {
    width: 95%
  }

  @include mini-phones {
    width: 100%;
    padding: 30% 0;
  }
}

.reviews__slider {
  @include mini-phones {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
}

.reviews__heading-row {
  display: flex;
  align-items: center;
  margin-bottom: 50px;

  @include mini-phones {
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 10%;
  }
}

.reviews__arrows {
  display: flex;
  align-items: center;

  @include mini-phones {
    width: 100%;
    justify-content: center;
  }
}

.reviews__btn {
  position: relative;
  width: 50px;
  height: 50px;
  border: 1px solid #2d3c4e;
  border-radius: 50%;
  flex-shrink: 0;

  &:not(:last-child) {
    margin-right: 20%;

    @include mini-phones {
      margin-right: 10%;
    }
  }

  &--left {
    &:hover {
      .arrow--left {
        transform: translate(-50%, -50%) rotate(180deg) scale(1.2);
      }
    }

    &:active {
      .arrow--left {
        fill: #000;
      }
    }
  }

  &--right {
    &:hover {
      .arrow--right {
        transform: translate(-50%, -50%) scale(1.2);
      }
    }

    &:active {
      .arrow--right {
        fill: #000;
      }
    }
  }
}

.reviews__list {
  display: flex;
  align-items: stretch;

  @include mini-phones {
    width: 90%;
    overflow: hidden;
    align-self: center;
  }
}

.reviews__item {
  margin-right: 4%;
  width: 50%;
  flex-shrink: 0;

  &:last-child {
    margin-right: 0;
  }

  @include tablets {
    margin-right: 0;
  }

  @include mini-phones {
    width: 100%;
  }
}
