.header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 8%;

  @include tablets {
    justify-content: space-between;
  }
}

.header__col {
  display: flex;

  &--left {
    justify-content: flex-start;
  }

  &--center {
    flex: 1;
    justify-content: center;
    padding: 0 20px;

    @include tablets {
      display: none;
    }
  }

  &--right {
    justify-content: flex-end;


    @include mini-phones {
      display: none;
    }
  }
}