.arrow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20%;
  height: 20%;

  &--up {
    transition: all .3s;
    transform: translate(-50%, -50%) rotate(-90deg);
    fill: white;
  }

  &--down {
    transition: all .3s;
    transform: translate(-50%, -50%) rotate(90deg);
    fill: white;
  }

  &--left {
    transition: all .3s;
    transform: translate(-50%, -50%) rotate(180deg);
    fill: #2d3c4e;
  }

  &--right {
    transition: all .3s;
    transform: translate(-50%, -50%);
    fill: #2d3c4e;
  }

  
}